<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rootHomeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".HomeFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/homeToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homeTitle"
            style="@style/TextAppearance.AppTheme.Headline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/lekton_bold"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@id/homeToolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/homeToolbar"
            tools:text="Title" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/homeTabLayout"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="64dp"
            android:background="@color/colorPrimary"
            android:elevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/homeTitle"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorGravity="bottom"
            app:tabPaddingBottom="0dp"
            app:tabPaddingTop="0dp"
            app:tabRippleColor="@color/colorAccent"
            app:tabTextAppearance="@style/TabTextStyle"
            app:tabTextColor="@drawable/tab_text_color" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            android:layout_marginEnd="@dimen/standard_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/homeTabLayout"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Basic.MaterialCardView">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/homeViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:adapter="@{adapter}"
                app:itemBinding="@{viewModel.tabBinding}"
                app:items="@{viewModel.tabList}" />
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <import type="com.erivera.apps.topcharts.models.domain.HomeTab" />

        <variable
            name="adapter"
            type="me.tatarka.bindingcollectionadapter2.BindingRecyclerViewAdapter&lt;com.erivera.apps.topcharts.models.domain.HomeTab>" />


        <variable
            name="viewModel"
            type="com.erivera.apps.topcharts.viewmodels.HomeViewModel" />
    </data>
</layout>