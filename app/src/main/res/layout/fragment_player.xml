<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.erivera.apps.topcharts.viewmodels.PlayerViewModel" />

        <variable
            name="listener"
            type="com.erivera.apps.topcharts.PlayerInteractionListener" />

        <variable
            name="gridLayoutManager"
            type="androidx.recyclerview.widget.GridLayoutManager" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layoutDescription="@xml/fragment_player_scene"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/gradientView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:focusable="false"
            android:focusableInTouchMode="false" />

        <ImageView
            android:id="@+id/gradientOverlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_black_white"
            android:contentDescription="@null" />

        <include
            layout="@layout/player_media"
            bind:listener="@{listener}"
            bind:viewModel="@{viewModel}" />

        <include
            layout="@layout/player_scroll"
            bind:gridLayoutManager="@{gridLayoutManager}"
            bind:viewModel="@{viewModel}" />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>