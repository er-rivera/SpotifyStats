<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logged_in_graph"
    app:startDestination="@id/fragment_player">
    <fragment
        android:id="@+id/fragment_player"
        android:name="com.erivera.apps.topcharts.PlayerFragment"
        android:label="Player"
        tools:layout="@layout/fragment_player">
        <action
            android:id="@+id/action_fragment_player_to_colorsFragment"
            app:destination="@id/colorsFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragment_stats"
        android:name="com.erivera.apps.topcharts.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" />
    <fragment
        android:id="@+id/fragment_settings"
        android:name="com.erivera.apps.topcharts.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/colorsFragment"
        android:name="com.erivera.apps.topcharts.ColorsFragment"
        android:label="fragment_colors_list"
        tools:layout="@layout/fragment_colors_list" />
</navigation>